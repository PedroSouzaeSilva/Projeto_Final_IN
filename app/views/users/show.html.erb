

    <section class="perfil">
      <div class="perfil-container">
        <div class="perfil-foto">
          <%= image_tag @user.avatar.thumb.url, alt: "Foto de Perfil", class: "foto" if !@user.avatar.nil?%>
          <button type="submit"><%= link_to 'Editar', edit_user_path(@user) %></button>
          <button type="submit">Permiss√µes</button>
        </div>
        <div class="perfil-atrib perfil-dados">
          <div class="perfil-nome">
            <h2><%= @user.name %></h2>
          </div>
          <div class="perfil-email">
            <div class="email-container">
              <p class = "email users-show"><%= @user.email %></p>
            </div>
          </div>
          <div class="cargos">
            <div class="cargos-container">
              <% @user.occupations.each do |occupation| %>
                <p><%= occupation.name_occu %></p>
              <% end %>
            </div>
          </div>
        </div>
        <div class="perfil-botoes">
          <div class="projetos users-show">
            <a href="#">Editar</a>
          </div>
          <div class="tarefa users-show">
            <a href="#">Projetos</a>
          </div>
          <div class="rendimento users-show">
            <a href="#">Rendimento</a>
          </div>
          <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
        </div>
      </div>
    </section>
    <div class="perfil-voltar">
      <%= link_to 'Voltar', users_path,  :class => "users-new-voltar"%>
    </div>
