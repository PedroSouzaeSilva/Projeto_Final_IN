<section class="index-users">
  <p id="notice"><%= notice %></p>

  <h1>Membros</h1>

  <table>
    <div class="users-bar">
      <thead class="users-bar-container">
        <tr>
          <th>Foto</th>
          <th>Name/E-mail</th>
          <th>Cargos</th>
          <th>Times</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    </div>


  
    <tbody class="user-body">
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.avatar.thumb.url if !user.avatar.nil? %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><% user.occupations.each do |occupation| %>
            <%= occupation.name_occu %>
            <% end %></td>
            <td><%= link_to 'Ver Perfil', user %></td>
            <td><%= link_to 'Editar', edit_user_path(user) %></td>
            <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <br>
  <div class="button-new-user">
    <%= link_to 'Novo Usuário', new_user_path %>
  </div>
</section>
