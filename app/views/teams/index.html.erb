<section class="index-times">

  <h1>Times</h1>

  <div class="index-times-container">
    <table>
      <thead>
        <tr>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr class="index-times-time">
            <td><%= link_to team.name, team %></td>

            <td class="editar"><%= link_to image_tag("edit_icon.png", alt:"Editar"), edit_team_path(team) %></td>
            <td class="excluir"><%= link_to image_tag("delete-icon.png", alt:"Editar"), team, method: :delete, data: { confirm: 'Tem certeza?' } %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <br>

  <div class="index-times-novo">
    <%= link_to 'Novo Time', new_team_path %>
  </div>
</div>
