<p id="notice"><%= notice %></p>

<h1>Times</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Mostrar time', team %></td>
        <td><%= link_to 'Editar Time', edit_team_path(team) %></td>
        <td><%= link_to 'Excluir time', team, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

