<section class="new-time-criado">

  <div class="new-time-criado-container">
    <p>
      <strong>Time:</strong>
      <br>
      <%= @team.name %>
    </p>


      <% @team.users.each do |user| %>
      <div class="nome-membros-time">
        <td><%= image_tag user.avatar.thumb.url if !user.avatar.nil? %>
        <p><%= link_to user.name, user %></p></td>
      </div>
      <% end %>


    <div class="new-time-criado-botao">
      <%= link_to image_tag("edit_icon.png", alt:"Editar"), edit_team_path(@team) %>
    </div>
  </div>

  <div class="new-time-criado-voltar">
    <%= link_to 'Back', teams_path %>
  </div>

</div>
