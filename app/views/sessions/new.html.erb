<div class="wrapper">
  <section class = "logo-container">
		<%= image_tag("logo-in-resized.png",  alt: "Logo In", class: "logo1") %>
		<div class = "lobo-container">
      <%= image_tag("lobo.png",  alt: "Lobo", class: "lobo") %>
		</div>
	</section>
	<section class="login">
    <div class="login-container">
      <%= form_for :sessions, url: :login do |form| %>
      
        <%= form.email_field :email, :class => "form-login", :placeholder => "E-mail" %>
        <%= form.password_field :password, :class => "form-login", :placeholder=> "Senha" %>
        
        <div class = "botoes">
          <%= form.submit "Entrar",  :class => ""%>
        </div>
      
      <% end %>
      
      <%= button_to "Esqueci minha senha", new_password_path, :id => "esqueci-button", :class => "blue-button blue-long-text", :method => :get %>
      <div class = "botoes">
        <%= button_to "Cadastro", new_user_path(@user), :id => "cadastro-button", :class => "blue-button", :method => :get %>
      </div>
    </div> 
  </section>
</div>