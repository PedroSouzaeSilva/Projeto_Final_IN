<div class="wrapper">
  <section class = "logo-container">
		<%= image_tag("logo-in-resized.png",  alt: "Logo In", class: "logo1") %>
		<div class = "lobo-container">
      <%= image_tag("lobo.png",  alt: "Lobo", class: "lobo") %>
		</div>
	</section>
  <section class="login">
	  <div class="container">	
      <%= form_for :sessions, class: "form", url: :login do |form| %>
      
        <%= form.email_field :email, :placeholder => "E-mail" %>
        
        <%= form.password_field :password, :placeholder=> "Senha" %>
      	  
        <%= form.submit%>
      <% end %>
      <div class = "botoes">
  			<button type="button" class = "blue-button blue-long-text" id="esqueci-button">Esqueci minha senha</button>
  			<%= button_to "Cadastro", new_user_path(@user), :id => "cadastro-button", :class => "blue-button", :method => :get %>
  		</div>
	  </div>
	</section>
  