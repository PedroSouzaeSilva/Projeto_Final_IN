      team.id ] }, {include_blank: "Time"}) %>


  <div class="field">
    <%= form.label "Prazo" %>
    <%= form.datetime_select :deadline, id: :project_deadline %>
  </div>

  <div class="field">
    <%= form.label "Preço" %>
    <%= form.text_field :price, id: :project_price %>
  </div>

  <div class="field">
    <%= form.label "Descrição" %>
    <%= form.text_area :content, id: :project_content %>
  </div>

  <div class="field">
    <%= form.label "Link do Trello" %>
    <%= form.text_field :trello, id: :project_trello %>
  </div>

